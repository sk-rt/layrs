{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib/types/",
    "resolveJsonModule": true,
    "rootDir": "src/ts/",
    "lib": ["es2016", "dom"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
