{
  "name": "layrs-js",
  "version": "0.0.1",
  "description": "Modal dialog",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "author": "sk-rt",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "npm-run-all clean build:*",
    "dev": "npm-run-all -p watch:*",
    "build:js": "rollup --config --environment BUILD:production",
    "watch:js": "rollup --config --watch",
    "build:scss": "node-sass src/scss/* -o dist/css/",
    "watch:scss": "node-sass src/scss/* -o dist/css/ --watch",
    "build:static": "cpx \"src/scss/**/*\" dist/scss/ ",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "cpx": "^1.5.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "rollup": "^1.24.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-uglify": "^6.0.3",
    "typescript": "^3.6.4"
  }
}
